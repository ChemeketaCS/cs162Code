#include <format>
#include <iostream>
#include <string>
using namespace std;

class Person {
protected:
    string m_name;
    int m_age;

public:
    Person(string name, int age) {
        m_name = name;
        m_age = age;
    }
    
    string getName() const {
        return m_name;
    }

    string toString() const {
        return format("Name: {}, Age: {}", m_name, m_age);
    }

    void introduce() const {
        cout << "Hi, my name is " << m_name << " and I am " << m_age << " years old." << endl;
    }
};

class Student : public Person {
private:
    string m_major;
public:
    Student(string name, int age, string major)
     : Person(name, age)
    {
        m_major = major;
    }

    string toString() const {
        string personStr = Person::toString();
        return format("{}, Major: {}", personStr, m_major);
    }

    void introduce() const {
        Person::introduce();
        cout << "   My major is " << m_major << "." << endl;
    }
};

int main() {
  cout << "-------------------------" << endl;
  Person p("John", 30);
  p.introduce();
  cout << "-------------------------" << endl;
  Student s("Alex", 20, "Computer Science");
  s.introduce();
  cout << "-------------------------" << endl;
}
