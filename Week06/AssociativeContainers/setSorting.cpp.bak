#include <iostream>
#include <set>
using namespace std;

struct Person {
    string name;
    int age;

    // Define less-than operator for ordering in set
    bool operator<(const Person& other) const {
        return name < other.name; // Order by name
    }
};

struct PersonAgeComparer {
  bool operator()(const Person& a, const Person& b) const {
    return a.age > b.age; // Compare by age descending
  }
};

int main() {
    cout << "Set of Persons ordered by name:" << endl;
    set<Person> people = {{"Bob", 25}, {"Alice", 30}, {"Charlie", 35}};
    for (const auto& person : people) {
        cout << "Name: " << person.name << ", Age: " << person.age << endl;
    }

    cout << "-------------------------" << endl;

    cout << "Set of Persons ordered by age descending:" << endl;
    set<Person, PersonAgeComparer> people2 = {
        {"Bob", 25}, {"Alice", 30}, {"Charlie", 35}};
    for (const auto& person : people2) {
        cout << "Name: " << person.name << ", Age: " << person.age << endl;
    }
}
